<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SearchableSpinner" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/olive</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/main</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/olive</item>
        <item name="colorSecondaryVariant">@color/main</item>
        <item name="colorOnSecondary">@color/main</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main</item>
        <item name="android:navigationBarColor">@color/main</item>
    </style>

    <style name="CustomSearchViewStyle" parent="Theme.SearchableSpinner">
        <item name="android:colorControlActivated">@color/gray</item>
    </style>

</resources>